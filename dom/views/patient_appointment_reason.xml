<odoo>
    <record id="patient_appointment_reason_tree_view" model="ir.ui.view">
      <field name="name">dom.patient.appointment.reason.tree</field>
      <field name="model">dom.patient.appointment.reason</field>
      <field name="arch" type="xml">
        <tree sample="1" editable="top">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="patient_appointment_reason_action" model="ir.actions.act_window">
      <field name="name">Reason for visit</field>
      <field name="res_model">dom.patient.appointment.reason</field>
      <field name="view_mode">tree</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add a new appointment reason
        </p>
      </field>
    </record>

</odoo>