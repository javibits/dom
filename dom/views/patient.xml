<odoo>

    <!-- Search View -->
    <record id="patient_view_search" model="ir.ui.view">
      <field name="name">dom.patient.view.search</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="id_number"/>
          <field name="sequence"/>
          <field name="email"/>
        </search>
      </field>
    </record>
    
    <!-- Tree View -->
    <record id="patient_tree_view" model="ir.ui.view">
      <field name="name">dom.patient.tree</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sequence"/>
          <field name="id_number"/>
          <field name="name"/>
          <field name="gender"/>
          <field name="email"/>
          <field name="phone"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="patient_form_view" model="ir.ui.view">
      <field name="name">dom.patient.form</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <field name="active" invisible="True" />
            <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
            <field name="image_1920" widget='image' class="oe_avatar" options="{'zoom': true, 'preview_image': 'avatar_128'}"/>
            <div class="oe_title">
              <h1 class="ps-3">
                <field name="name" placeholder="Patient's Name"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="sequence"/>
              </group>
            </group>
            <notebook>
              <page name="personal_information" string="Personal Information">
                  <group>
                      <group>
                          <field name="id_number" placeholder="ID Number"/>
                          <field name="phone"/>
                          <field name="mobile"/>
                          <field name="email"/>
                          <label for="street" string="Address"/>
                          <div class="o_address_format">
                              <field name="street" placeholder="Street..." class="o_address_street"/>
                              <field name="street2" placeholder="Street 2..."
                                      class="o_address_street"/>
                              <field name="city" placeholder="City" class="o_address_city"/>
                              <field name="state_id" class="o_address_state" placeholder="State"
                                      options='{"no_open": True}'/>
                              <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                              <field name="country_id" placeholder="Country" class="o_address_country"
                                      options='{"no_open": True, "no_create": True}'/>
                          </div>
                      </group>
                      <group>
                          <field name="gender"/>
                          <field name="dob"/>
                          <field name="age"/>
                          <field name="marital_status"/>
                          <field name="profession"/>
                          <field name="occupation"/>
                      </group>
                  </group>
              </page>
              <page name="patient_history" string="History">
                <notebook>
                  <page name="personal_history" string="Personal">
                    <field name="personal_history_ids" context="{'default_type': 'personal'}">
                      <tree editable="bottom">
                          <field name="type" invisible="1"/>
                          <field name="write_date"/>
                          <field name="item_id" string="Item" domain="[('type','in',('personal','family'))]" context="{'default_type': 'personal'}"/>
                          <field name="note"/>
                          <field name="important" widget="boolean_toggle"/>
                      </tree>
                    </field>
                  </page>
                  <page name="family_history" string="Family">
                    <field name="family_history_ids" context="{'default_type': 'family'}">
                      <tree editable="bottom">
                          <field name="type" invisible="1"/>
                          <field name="write_date"/>
                          <field name="family_id" required="True"/>
                          <field name="item_id" string="Item" domain="[('type','in',('personal','family'))]" context="{'default_type': 'family'}"/>
                          <field name="note"/>
                          <field name="family_deceased" widget="boolean_toggle"/>
                          <field name="important" widget="boolean_toggle"/>
                      </tree>
                    </field>
                  </page>
                  <page name="psychobiological_habits_history" string="Psychobiological Habits">
                    <field name="psychobiological_habits_history_ids" context="{'default_type': 'psychobiological_habits'}">
                      <tree editable="bottom">
                          <field name="type" invisible="1"/>
                          <field name="write_date"/>
                          <field name="item_id" string="Item" domain="[('type','=','psychobiological_habits')]" context="{'default_type': 'psychobiological_habits'}"/>
                          <field name="note"/>
                          <field name="important" widget="boolean_toggle"/>
                      </tree>
                    </field>
                  </page>
                  <page name="sexual_activity_history" string="Sexual Activity">
                    <field name="sexual_activity_history_ids" context="{'default_type': 'sexual_activity'}">
                      <tree editable="bottom">
                          <field name="type" invisible="1"/>
                          <field name="write_date"/>
                          <field name="item_id" string="Item" domain="[('type','=','sexual_activity')]" context="{'default_type': 'sexual_activity'}"/>
                          <field name="note"/>
                          <field name="important" widget="boolean_toggle"/>
                      </tree>
                    </field>
                  </page>
                  <page name="other_history" string="Other">
                    <field name="other_history_ids" context="{'default_type': 'other'}">
                      <tree editable="bottom">
                          <field name="type" invisible="1"/>
                          <field name="write_date"/>
                          <field name="item_id" string="Item" domain="[('type','=','other')]" context="{'default_type': 'other'}"/>
                          <field name="note"/>
                          <field name="important" widget="boolean_toggle"/>
                      </tree>
                    </field>
                  </page>
                </notebook>
              </page>
              <page name='internal_notes' string="Internal Notes">
                <field name="comment" placeholder="Internal notes..."/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action -->
    <record id="patient_action" model="ir.actions.act_window">
      <field name="name">Medical Patients</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
      <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('dom.patient_tree_view')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('dom.patient_form_view')})]"
      />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add a new patient
        </p>
      </field>
    </record>

</odoo>