<odoo>
    <record id="patient_prescription_search_view" model="ir.ui.view">
      <field name="name">dom.patient.prescription.search.view</field>
      <field name="model">dom.patient.prescription</field>
      <field name="arch" type="xml">
        <search>
          <field name="patient_id"/>
          <field name="date"/>
          <filter string="From Appointment" name="from_appointment" domain="[('appointment_id', '!=', False)]"/>
        </search>
      </field>
    </record>

    <record id="patient_prescription_tree_view" model="ir.ui.view">
      <field name="name">dom.patient.prescription.tree</field>
      <field name="model">dom.patient.prescription</field>
      <field name="arch" type="xml">
        <tree sample="1">
          <field name="patient_id"/>
          <field name="date"/>
          <field name="appointment_id"/>
          <field name="line_ids"/>
        </tree>
      </field>
    </record>

    <record id="patient_prescription_form_view" model="ir.ui.view">
      <field name="name">dom.patient.prescription.form</field>
      <field name="model">dom.patient.prescription</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <field name="patient_id" options='{"no_open": True, "no_create": True}'/>
                <field name="date"/>
                <field name="appointment_id" options='{"no_open": True, "no_create": True}' attrs="{'invisible': [('appointment_id', '=', False)]}"/>
                <field name="line_ids" widget="one2many">
                  <tree editable="bottom">
                      <field name="medicine_id" options='{"no_open": True, "no_create": True}'/>
                      <field name="directions"/>
                  </tree>
                </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="patient_prescription_action" model="ir.actions.act_window">
      <field name="name">Patient Prescriptions</field>
      <field name="res_model">dom.patient.prescription</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add a new Patient Prescription
        </p>
      </field>
    </record>

</odoo>